            </div>
        </div>
        <!-- Food End -->
        

        <!-- Menu Start -->
        <div class="menu">
            <div class="container">
                <div class="section-header text-center">
                    <p>Food Menu</p>
                    <h2>Delicious Food Menu</h2>
                </div>
                <div class="menu-tab">
                    <ul class="nav nav-pills justify-content-center">
                        <li class="nav-item">
                            <a class="nav-link active" data-toggle="pill" href="#burgers">Burgers</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" data-toggle="pill" href="#snacks">Menus</a>
                        </li>
                    </ul>
                    <div class="tab-content">
                        <div id="burgers" class="container tab-pane active">
                            <div class="row">
                                <div class="col-lg-7 col-md-12">
							{% for item in burgers %}
                                    <div class="menu-item">
                                        <div class="menu-img">
                                            <a href="{{path('produit_details',{'idProd':item.id})}}"><img src="{{asset('pics/')}}{{item.image}}" alt="Image"></a>
                                        </div>
                                        <div class="menu-text">
                                            <h3><span>{{item.nom}}</span> <strong>{{item.prix}} CFA</strong></h3>
                                            <p>{{item.description}}</p>
                                        </div>
                                    </div>
							{% endfor %}
                                </div>
                                <div class="col-lg-5 d-none d-lg-block">
                                    <img src="{{asset('burgerKing/img/menu-burger-img.jpg')}}" alt="Image">
                                </div>
                            </div>
                        </div>
                        <div id="snacks" class="container tab-pane fade">
                            <div class="row">
                                <div class="col-lg-7 col-md-12">
                                    {% for item in menus %}
                                    <div class="menu-item">
                                        <div class="menu-img">
                                            <a href="{{path('menu_details',{'idProd':item.id})}}"><img src="{{asset('pics/')}}{{item.image}}" alt="Image"></a>
                                        </div>
                                        <div class="menu-text">
                                            <h3><span>{{item.nom}}</span> <strong>{{item.prix}} CFA</strong></h3>
                                        </div>
                                    </div>
                                    {% endfor %}
                                </div>
                                <div class="col-lg-5 d-none d-lg-block">
                                    <img src="{{asset('burgerKing/img/menu-snack-img.jpg')}}" alt="Image">
                                </div>
                            </div>
                        </div>
                        
                    </div>
                </div>
            </div>
        </div>
        <!-- Menu End -->

{% endblock %}
